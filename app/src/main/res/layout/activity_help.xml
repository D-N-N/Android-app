<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/help_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.dnn.vision.HelpActivity">


    <TextView
        android:id="@+id/titleNavigationHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/navigation_title"
        android:textStyle="bold"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/textNavigationHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/navigation_text" />

    <TextView
        android:id="@+id/titleCurrrencyHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/currency_detection_help_title"
        android:textStyle="bold"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/textCurrencyHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/currency_detection_help_text" />

</LinearLayout>